@page "/TiposDePuntos/Index/Edit/{TipoId:int}"

@rendermode InteractiveServer

@inject TiposPuntosService tiposPuntosService
@inject NavigationManager navigationManager
@inject ToastService toastService

<PageTitle>Editar tipo de punto</PageTitle>

<div class="container w-75 mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header d-flex justify-content-between align-items-center bg-light">
            <h5 class="card-title">Editar informacion del tipo de punto</h5>
        </div>

        <EditForm Model="@tipoPunto" OnValidSubmit="Editar">
            <DataAnnotationsValidator />
            <div class="card-body d-flex flex-column gap-3">
                <div class="justify-content-start">
                    <label>Nombre: </label>
                    <InputText class="form-control" @bind-Value="tipoPunto.Nombre"
                               placeholder="nombreActual" />
                    <ValidationMessage For="@(() => tipoPunto.Nombre)" />
                </div>
                <div class="justify-content-start">
                    <label>Descripcion: </label>
                    <InputText class="form-control"
                               @bind-Value="tipoPunto.Descripcion"
                               placeholder="descripcionActual" />
                    <ValidationMessage For="@(() => tipoPunto.Descripcion)" />
                </div>
            </div>
            <div class="card-footer d-flex justify-content-center gap-2">
                <a href="/Estudiantes/Index" class="btn btn-secondary">
                    <span class="bi bi-arrow-left me-2"></span> Volver
                </a>
                <button type="submit" class="btn btn-primary bi bi-save me-2"> Modificar </button>
                <button type="button" class="btn btn-danger bi bi-trash me-2" data-bs-toggle="modal" data-bs-target="#modalConfirm"> Eliminar </button>
            </div>
        </EditForm>
    </div>
</div>
@* Modulo de confirmacion *@
<div class="modal fade" id="modalConfirm" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header text-bg-light text-black">
                <h5 class="modal-title">Alerta de confirmacion</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body"> ¿Esta seguro que desa eliminar el tipo de punto? </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary bi bi-x" data-bs-dismiss="modal"> Cancelar </button>
                <button type="button" class="btn btn-danger bi bi-trash me-2" @onclick="Eliminar"> Eliminar </button>
            </div>
        </div>
    </div>
</div>
@* Notificacion sucess/error *@
@if (toastEsVisible)
{
    <div class="toast-container position-fixed top-0 end-0 p-3">
        <div class="toast show text-bg-@mensaje.Type.ToString().ToLower()" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <strong class="me-auto">@mensaje.Title</strong>
            </div>
            <div class="toast-body">
                @mensaje.Message
                <div class="progress mt-2">
                    <div class="progress-bar bg-success" id="progressBar"></div>
                </div>
            </div>
        </div>
    </div>
}
@code {
    [Parameter]
    public int TipoId { get; set; }

    TiposPuntos tipoPunto = new();
    string nombreActual = string.Empty;
    string descripcionActual = string.Empty;
    
    ToastMessage mensaje = new ToastMessage();
    bool toastEsVisible = false;
    private double progress;

    protected override async Task OnInitializedAsync()
    {
        tipoPunto = await tiposPuntosService.Buscar(TipoId);
        if (tipoPunto != null)
        {
            nombreActual = tipoPunto.Nombre;
            descripcionActual = tipoPunto.Descripcion;
        }
    }
    async Task Editar()
    {
        var modificado = await tiposPuntosService.Modificar(tipoPunto);
        if (modificado){
            await mostrarToastProgress("Completado", "El tipo de punto ha sido editado con exito");
            navigationManager.NavigateTo("/TiposDePuntos/Index");
        }else
            await mostrarToastProgress("Error", "Error al modificar el tipo de punto");
    }
    async Task Eliminar()
    {
        var eliminado = await tiposPuntosService.Eliminar(tipoPunto.TipoId);
        if(eliminado){
            await mostrarToastProgress("Completado", "El tipo de punto ha sido eliminado con exito");
            navigationManager.NavigateTo("/TiposDePuntos/Index");
        }
        else
            await mostrarToastProgress("Error", "Error al eliminar el tipo de punto");
    }
    async Task mostrarToastProgress(string titulo, string texto)
    {
        progress = 100;
        toastEsVisible = true;
        mensaje = toastService.ShowToast(titulo, texto);

        int duration = 3000;
        int intervalTime = 30;
        int steps = (int)duration / intervalTime;

        for (int i = 0; i < steps; i++)
        {
            await Task.Delay(intervalTime);
            progress -= 100.0 / steps;
            StateHasChanged();
        }
        toastEsVisible = false;
        StateHasChanged();
    }
}
