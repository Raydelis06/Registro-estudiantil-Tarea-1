@page "/Asignaturas/Index/Create"

@rendermode InteractiveServer

@inject AsignaturasService asignaturasService
@inject NavigationManager navigationManager

<PageTitle>Crear Asignatura</PageTitle>


<div class="container w-75 mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header d-flex justify-content-between align-items-center bg-light">
            <h5 class="card-title">Crear Asignatura</h5>
        </div>
        <EditForm Model="@asignatura" OnValidSubmit="Crear">
            <DataAnnotationsValidator />
            <div class="card-body d-flex flex-column gap-3 ">
                <div class="justify-content-start">
                    <label>Nombre: </label>
                    <InputText class="form-control " @bind-Value="asignatura.Nombre"
                               placeholder="Ingrese el nombre de la asignatura..." />
                    <ValidationMessage For="@(() => asignatura.Nombre)" />
                </div>
                <div class="justify-content-start">
                    <label>Codigo: </label>
                    <InputText class="form-control"
                               @bind-Value="asignatura.Codigo"
                               placeholder="Ingrese el codigo de la asignatura..." />
                    <ValidationMessage For="@(() => asignatura.Codigo)" />
                </div>
                <div class="justify-content-start">
                    <label>Aula: </label>
                    <InputText  class="form-control"
                               @bind-Value="asignatura.Aula"
                               placeholder="Ingrese el aula de la asignatura..." />
                    <ValidationMessage For="@(() => asignatura.Aula)" />
                </div>
                <div class="justify-content-start">
                    <label>Cantidad de creditos: </label>
                    <InputNumber  class="form-control"
                               @bind-Value="asignatura.Creditos"
                               placeholder="Ingrese la cantidad de creditos..." />
                    <ValidationMessage For="@(() => asignatura.Creditos)" />
                </div>
            </div>
            <div class="card-footer d-flex justify-content-center gap-2">
                <a href="/Asignaturas/Index" class="btn btn-secondary">
                    <span class="bi bi-arrow-left me-2"></span> Volver
                </a>
                <button type="submit" class="btn btn-primary bi bi-save me-2"> Guardar </button>
            </div>
        </EditForm>

    </div>
</div>

@code {

    Asignaturas asignatura = new Asignaturas();

    private async Task Crear()
    {
        await asignaturasService.Guardar(asignatura);
        navigationManager.NavigateTo("/Asignaturas/Index");
    }
}

