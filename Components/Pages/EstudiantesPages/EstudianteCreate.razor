@page "/Estudiantes/Index/Create"

@rendermode InteractiveServer

@inject EstudiantesService estudiantesService
@inject NavigationManager navigationManager
@inject ToastService toastService

<PageTitle>Crear Estudiante</PageTitle>

<div class="container w-75 mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header d-flex justify-content-between align-items-center bg-light">
            <h5 class="card-title">Crear Estudiante</h5>
        </div>
        <EditForm Model="@estudiante" OnValidSubmit="Crear">
            <DataAnnotationsValidator />
            <div class="card-body d-flex flex-column gap-3 ">
                <div class="justify-content-start">
                    <label>Nombre completo: </label>
                    <InputText id="inputNombre" class="form-control "
                               @bind-Value="estudiante.Nombres"
                               placeholder="Ingrese el nombre del estudiante..." />
                    <ValidationMessage For="@(() => estudiante.Nombres)" />
                </div>
                <div class="justify-content-start">
                    <label>Correo electronico: </label>
                    <InputText id="inputEmail" class="form-control"
                               @bind-Value="estudiante.Email"
                               placeholder="Ingrese el correo electronico del estudiante..." />
                    <ValidationMessage For="@(() => estudiante.Email)" />
                </div>
                <div class="justify-content-start">
                    <label>Edad: </label>
                    <InputNumber step="1" id="inputEdad" class="form-control"
                               @bind-Value="estudiante.Edad"
                               placeholder="Ingrese la edad actual del estudiante..." />
                    <ValidationMessage For="@(() => estudiante.Edad)" />
                </div>
            </div>
            <div class="card-footer d-flex justify-content-center gap-2">
                <a href="/Estudiantes/Index" class="btn btn-secondary">
                    <span class="bi bi-arrow-left me-2"></span> Volver
                </a>
                <button type="submit" class="btn btn-primary bi bi-save me-2"> Guardar </button>
            </div>
        </EditForm>
    </div>
</div>
@* Notificacion sucess/error *@
@if (toastEsVisible)
{
    <div class="toast-container position-fixed top-0 end-0 p-3">
        <div class="toast show text-bg-@mensaje.Type.ToString().ToLower()" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <strong class="me-auto">@mensaje.Title</strong>
            </div>
            <div class="toast-body">
                @mensaje.Message
                <div class="progress mt-2">
                    <div class="progress-bar bg-success" id="progressBar"></div>
                </div>
            </div>
        </div>
    </div>
}
@code {

    Estudiantes estudiante = new Estudiantes();
    ToastMessage mensaje = new ToastMessage();
    bool toastEsVisible = false;
    private double progress;

    private async Task Crear()
    {
        var creado = await estudiantesService.Guardar(estudiante);
        if (creado)
        {
            await mostrarToastProgress("Completado", "El estudiante ha sido creado con exito");
            navigationManager.NavigateTo("/Estudiantes/Index");
        }
        else
            await mostrarToastProgress("Error", "Error guardar el estudiante");
    }
    async Task mostrarToastProgress(string titulo, string texto)
    {
        progress = 100;
        toastEsVisible = true;
        mensaje = toastService.ShowToast(titulo, texto);

        int duration = 3000;
        int intervalTime = 30;
        int steps = (int)duration / intervalTime;

        for (int i = 0; i < steps; i++)
        {
            await Task.Delay(intervalTime);
            progress -= 100.0 / steps;
            StateHasChanged();
        }
        toastEsVisible = false;
        StateHasChanged();
    }
}
